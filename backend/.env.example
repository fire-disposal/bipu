DEBUG=True
SECRET_KEY=dev-secret-change
ALLOWED_HOSTS=["*"]

# 数据库配置
# 生产环境使用PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bipupu
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# 开发环境可设置此变量强制使用SQLite
# BIPUPU_USE_SQLITE=true

# 或者直接设置数据库URL
# BIPUPU_DATABASE_URL=sqlite:///bipupu.db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379

# 如果Redis不可用，系统会自动使用内存缓存
# USE_MEMORY_CACHE=true

